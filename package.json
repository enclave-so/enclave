{
  "name": "enclave",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "wallet:dev": "vite",
    "wallet:build": "cross-env NODE_ENV=production tsc && vite build",
    "wallet:pretty": "prettier --check src",
    "wallet:lint": "pnpm wallet:pretty && eslint 'src/**/*.{ts,tsx,json}' --max-warnings 0",
    "wallet:preview": "pnpm wallet:build && pnpm vite preview",
    "extension:dev": "pnpm --filter extension dev",
    "extension:build": "pnpm --filter extension build",
    "extension:watch": "pnpm --filter extension watch",
    "sdk:dev": "pnpm --filter sdk dev",
    "sdk:build": "pnpm --filter sdk build",
    "sdk:prebuild": "pnpm --filter sdk prebuild",
    "docs:dev": "pnpm --filter site dev",
    "docs:build": "pnpm --filter site build",
    "docs:preview": "pnpm --filter site preview"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "@tanstack/react-query": "^5.53.1",
    "jotai": "^2.9.3",
    "preact": "^10.23.2",
    "viem": "^2.21.0",
    "wagmi": "^2.12.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@preact/preset-vite": "^2.9.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.1",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.10",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "globals": "^15.9.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "packageManager": "pnpm@9.7.0"
}
