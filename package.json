{
  "name": "enclave",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "wallet:dev": "vite",
    "wallet:build": "cross-env NODE_ENV=production tsc && vite build",
    "wallet:pretty": "prettier --check src",
    "wallet:lint": "pnpm wallet:pretty && eslint 'src/**/*.{ts,tsx,json}' --max-warnings 0",
    "wallet:preview": "pnpm wallet:build && pnpm vite preview",
    "extension:dev": "pnpm --filter extension dev",
    "extension:build": "pnpm --filter extension build",
    "extension:watch": "pnpm --filter extension watch",
    "sdk:dev": "pnpm --filter sdk dev",
    "sdk:build": "pnpm --filter sdk build",
    "sdk:prebuild": "pnpm --filter sdk prebuild",
    "docs:dev": "pnpm --filter site dev",
    "docs:build": "pnpm --filter site build",
    "docs:preview": "pnpm --filter site preview"
  },
  "dependencies": {
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "@tanstack/react-query": "^5.45.1",
    "jotai": "^2.8.3",
    "preact": "^10.22.0",
    "viem": "^2.16.2",
    "wagmi": "^2.10.5"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.3",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.7",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "packageManager": "pnpm@9.4.0"
}
